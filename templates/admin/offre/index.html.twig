{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminOffreController!{% endblock %}

{% block body %}
  <div class="main-content-wrap sidenav-open d-flex flex-column">
      <div class="breadcrumb">
          <h1>Datatables</h1>
          <ul>
              <li><a href="">UI Kits</a></li>
              <li>Datatables</li>
          </ul>
      </div>
      <div class="separator-breadcrumb border-top"></div>

      <div class="row mb-4">
          <div class="col-md-12">
              <h4>Tableau des offres</h4>
          </div>
      </div>
      <!-- end of row -->

      <div class="row mb-4">
          <div class="col-md-12 mb-4">
                    <div class="card text-left">

                        <div class="card-body">
                            <h4 class="card-title mb-3">Offres Emplois</h4>
                            <div class="table-responsive">
                                <table id="zero_configuration_table" class="display table table-striped table-bordered table " style="width:100%">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Poste</th>
                                            <th scope="col">Nombre Poste</th>
                                            <th scope="col">Nom Entreprise</th>

                                            <th scope="col">Date Expiration</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for offre in offres %}

                                        <tr>
                                            <td scope="row">{{offre.id}}</td>
                                            <td>{{offre.poste}}</td>
                                            <td>{{offre.nbPoste}}</td>
                                            <td>{{offre.entreprise.nom}}</td>
                                            <td>{{offre.endDate | date("m/d/Y")}}</td>
                                            <td>
                                                <a href="{{ path('admin_offres_edit', {'id' : offre.id}) }}" class="text-success mr-2">
                                                    <i class="nav-icon i-Pen-2 font-weight-bold"></i>
                                                </a>
                                                <a href="#" class="text-danger mr-2">
                                                    <i class="nav-icon i-Close-Window font-weight-bold"></i>
                                                </a>
                                            </td>

                                        </tr>
                                        {% endfor %}

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Poste</th>
                                            <th>Nombre Poste</th>
                                            <th>Nom Entreprise</th>
                                            <th>Start date</th>
                                            <th>End date</th>

                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
