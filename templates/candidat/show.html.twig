{% extends 'base.html.twig' %}

{% block title %}Candidat {{candidat.user.firstName}} {% endblock %}
{% block stylesheets %}
{# <link rel="stylesheet" href="/demos/resume/resume.css" type="text/css" /> #}
<link rel="stylesheet" href="/demos/resume/css/fonts.css" type="text/css" />
  <style>
		.skills li .progress, .dark .skills li .progress-percent {
			background-color: #FFF !important;
			color: #333;
			text-shadow: none;
			font-size: 12px;
		}
		.skill-area{
			font-family: 'Source Sans Pro', sans-serif !important;
		}
		.dark .skills li > span {
			font-weight: 300;
			color: #FFF;
			letter-spacing: 3px;
			top: -24px;
		}
		.skill-area h4 {
			font-family: 'Source Sans Pro', sans-serif !important;
			font-size: 20px;
			text-transform: uppercase;
			letter-spacing: 1px;
			color: rgba(255, 255, 255, 0.7);
		}
		.skill-area span:first-child {
			margin-top: 0;
		}
		.skill-area .skill-info span {
			font-family: 'Source Sans Pro', sans-serif !important;
			display: block;
			margin-top: 30px;
			font-size: 17px;
		}
		.skill-area .skill-info {
			border-left: 1px solid rgba(255, 255, 255, 0.2);
			padding-left: 25px;
		}
  </style>
{% endblock %}
{% block body %}
    <section id="page-title">

			<div class="container clearfix">
				<h1>{{candidat.user}}</h1>
				<span>{{candidat.cv.niveauEtude}}</span>
				<span>{{candidat.cv.niveauExperience}}</span>

			</div>

		</section>
    <section id="content" class="bg-transparent">
			<div class="content-wrap pb-0 bg-transparent">
        <div id="section-about" class="section page-section m-0" style="background: #EEE url('/demos/resume/images/sections/1.jpg') no-repeat center center; background-size: cover; padding: 100px 0">
            <div class="container">
              <div class="row">
                <div class="col-md-5 offset-md-7 clearfix">
                  <div class="heading-block">
                    <h2 class="font-secondary">About Me.</h2>
                    <span>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Praesentium reprehenderit inventore beatae velit quae labore sunt in possimus. Mollitia, culpa?</span>
                  </div>
                  <table class="table">
									<tbody>
										<tr>
											<td><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Civilité:</font></font></strong></td>
											<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{candidat.user.civilite}}</font></font></td>
										</tr>
										<tr>
											<td class="border-top-0"><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nom:</font></font></strong></td>
											<td class="border-top-0"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{candidat.user.lastname}}</font></font></td>
										</tr>
										<tr>
											<td class="border-top-0"><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Prénom:</font></font></strong></td>
											<td class="border-top-0"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{candidat.user.firstname}}</font></font></td>
										</tr>
										<tr>
											<td><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Date de naissance:</font></font></strong></td>
											<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{candidat.dateNaiss | format_date}}</font></font></td>
										</tr>
										<tr>
											<td><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">E-mail:</font></font></strong></td>
											<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{candidat.user.email}}</font></font></td>
										</tr>
										<tr>
											<td><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Téléphoner:</font></font></strong></td>
											<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{candidat.user.numTel}}</font></font></td>
										</tr>
										<tr>
											<td><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Addresse:</font></font></strong></td>
											<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                          {{candidat.user.address}} </font></font>
                      </td>
										</tr>
										<tr>
											<td><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">ville:</font></font></strong></td>
											<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                          {{candidat.user.ville}} </font></font>
                      </td>
										</tr>
										<tr>
											<td><strong><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nationalité:</font></font></strong></td>
											<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{candidat.user.nationalite}}</font></font></td>
										</tr>
									</tbody>
								</table>
								{# <a href="{ url }" class="button button-large button-border button-black button-dark ml-0"><i class="icon-line-cloud-download"></i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Voir le CV</font></font></a> #}
							</div>
              </div>
            </div>
            <div class="video-wrap">
              <div class="video-overlay d-sm-block d-md-none" style="background: rgba(255,255,255,0.9);"></div>
            </div>
          </div>
        </div>
        <div class="section m-0 skill-area bg-color dark" style="padding: 80px 0;">
					<div class="container">
						<div class="row">
							<div class="col-lg-4 col-md-6">
							<h4>Niveau d'étude</h4>
								<div class="skills"> {{candidat.cv.niveauEtude}} </div>

								<h4>Formations</h4>
								<div class="skill-info">
                {% for formation in candidat.cv.formations %}
									<span>
										{{formation.nomEcole}}<br>
										{{formation.titre}}<br>
										{{formation.dateDebut | format_date}} – {{formation.dateFin | format_date}}
									</span>
                {% endfor %}

								</div>
							</div>

							<div class="w-100 bottommargin d-block d-md-none"></div>

							<div class="col-lg-4 col-md-6">
								<h4>Niveau Experience</h4>
								<div class="skills"> {{candidat.cv.niveauExperience}} </div>
								<h4>Experience</h4>
								<div class="skill-info">
									{% for experience in candidat.cv.experiences %}
									<span>
										{{experience.entreprise}}<br>
										{{experience.poste}}<br>
										{{experience.dateDebut | format_date}} – {{experience.dateFin | format_date}}
									</span>
                {% endfor %}
								</div>
							</div>

							<div class="w-100 bottommargin d-block d-lg-none clear"></div>

							<div class="col-lg-4 col-12">
								<h4>Langues</h4>
								<ul class="skills">
								{% for langue in candidat.critere.langues %}

									<li data-percent="80">
										<span>{{langue}}</span>

									</li>
								{% endfor %}

								</ul>
								<h4>Secteurs d'activité</h4>
								<ul class="skills">
								{% for secteur in candidat.critere.secteurActivites %}

									<li data-percent="80">
										<span>{{secteur}}</span>

									</li>
								{% endfor %}

								</ul>
							</div>

						</div>
					</div>
				</div>
      </section>
{% endblock %}
