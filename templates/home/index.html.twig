                            <div class="col-md-4 white pl-3 ml-1">
                                <h3 class="text-black-50 mb-3 mt-2">Emploi par secteur</h3>
                                <ul class="mb-1 list-unstyled">
                                    {% for secteur in secteur_activite|slice(0, 13) %}
                                        <a href=""><li class="font-weight-bold font-body text-black-50"><strong>{{ secteur }}</strong></li></a>
                                    {% endfor %}
                                </ul>
                            <a href="{{ path('emploi') }}" class="button button-reveal button-small mt-2 button-circle text-right m-0 "><i class="icon-angle-right"></i><span>les secteurs d'activité</span></a>                            </div>
