                                <ul class="mb-1 list-unstyled">
                                    {% for metier in metiers|slice(0, 13) %}
                                        <a href=""><li class="font-weight-bold font-body  text-black-50"><strong>{{ metier }}</strong></li></a>
                                    {% endfor %}
                                </ul>
                                <a href="{{ path('emploi') }}" class="button button-reveal button-small mt-2 button-circle text-right m-0"><i class="icon-angle-right"></i><span>tous les métiers</span></a>                            </div>
                            <div class="col-md-4 white pl-3 ml-1">
                                <h3 class="text-black-50 mb-3 mt-2">Emploi par Régions</h3>
                                <ul class="mb-1 list-unstyled">
                                    {% for region in regions|slice(0, 13) %}
                                        <a href=""><li class="font-weight-bold font-body  text-black-50"><strong>{{ region }}</strong></li></a>
                                    {% endfor %}
                                </ul>
                                <a href="{{ path('emploi') }}" class="button button-reveal button-small mt-2 button-circle text-right m-0"><i class="icon-angle-right"></i><span>toutes les région</span></a>

                            </div>

                        </div>
                    </div>

                </div>

            </div>
            <a href="{{ path('account_home') }}" class="button button-full button-dark center text-right bottommargin-lg">
                <div class="container clearfix">
                    Vous n'avez pas encore de compte !! <strong>Inscrivez vous ICI</strong> <i class="icon-caret-right" style="top:4px;"></i>
                </div>
            </a>
            <div class="row align-items-stretch">
                <div class="col-lg-3 col-md-6 center col-padding" style="background-color: #E2E2E2;">
                    <div>
                        <i class="i-plain i-xlarge mx-auto bottommargin-sm icon-et-pictures"></i>
                        <div class="counter"><span data-from="1" data-to="{{offres | length}}" data-refresh-interval="50" data-speed="2000">{{offres | length}}</span>+</div>
                        <h5>Nombre d'offres disponible</h5>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 center col-padding" style="background-color: #E9E9E9;">
                    <div>
                        <i class="i-plain i-xlarge mx-auto bottommargin-sm icon-et-pencil"></i>
                        <div class="counter"><span data-from="0" data-to="{{entreprises | length}}" data-refresh-interval="50" data-speed="2500">{{entreprises | length}}</span>+</div>
                        <h5>Entreprises Inscrits</h5>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 center col-padding" style="background-color: #EEE;">
                    <div>
                        <i class="i-plain i-xlarge mx-auto bottommargin-sm icon-et-puzzle"></i>
                        <div class="counter"><span data-from="0" data-to="{{candidats | length}}" data-refresh-interval="25" data-speed="3000">{{candidats | length}}</span>+</div>
                        <h5>Candidats Inscrits</h5>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 center col-padding" style="background-color: #F2F2F2;">
                    <div>
                        <i class="i-plain i-xlarge mx-auto bottommargin-sm icon-et-document"></i>
                        <div class="counter"><span data-from="10" data-to="{{users | length}}" data-refresh-interval="30" data-speed="2700">{{users | length}}</span>+</div>
                        <h5>Utilisateurs</h5>
                    </div>
                </div>
            </div>
            <div class="fancy-title title-center title-border topmargin">
                <h3>Nos entreprises populaires</h3>
            </div>
            <div id="oc-portfolio" class="owl-carousel portfolio-carousel carousel-widget owl-loaded owl-drag" data-pagi="false" data-items-xs="1" data-items-sm="2" data-items-md="3" data-items-lg="4">
                <div class="owl-stage-outer">
                    <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2260px;">
                        {% for entreprise in entreprises | slice(0,8) %}
                          {% set url = path('entreprise_show', {'slug' : entreprise.slug} ) %}
                            <div class="owl-item active" style="width: 162.5px; margin-right: 20px;">
                                <div class="portfolio-item">
                                    <div class="portfolio-image" style="position: relative; display:block;">
                                        <a href="">
                                            <img src=" {{entreprise.picture}} " style="min-height: 200.5px;" alt="Open Imagination">
                                        </a>
                                        <div class="bg-overlay">
                                            <div class="bg-overlay-content dark animated fadeOut" data-hover-animate="fadeIn" data-hover-speed="350" style="animation-duration: 350ms;">
                                                <a href="{{url}}" class="overlay-trigger-icon bg-light text-dark animated fadeInUpSmall" data-hover-animate="fadeInDownSmall" data-hover-animate-out="fadeInUpSmall" data-hover-speed="350" data-lightbox="image" style="animation-duration: 350ms;"><i class="icon-line-plus"></i></a>
                                                <a href="{{ url }}" class="overlay-trigger-icon bg-light text-dark animated fadeInUpSmall" data-hover-animate="fadeInDownSmall" data-hover-animate-out="fadeInUpSmall" data-hover-speed="350" style="animation-duration: 350ms;"><i class="icon-line-ellipsis"></i></a>
                                            </div>
                                            <div class="bg-overlay-bg dark animated fadeOut" data-hover-animate="fadeIn" data-hover-speed="350" style="animation-duration: 350ms;"></div>
                                        </div>
                                    </div>

                                        <div class="portfolio-desc">
                                            <h3><a href="{{ url }}">{{entreprise.nom}}</a></h3>
                                            <span><a href=""> {{ entreprise.user.ville }} </a>, <a href="">{{ entreprise.user.pays }} </a></span>
                                        </div>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                </div>
            </div>
            {# <div class="owl-nav"><button type="button" role="presentation" class="owl-prev disabled"><i class="icon-angle-left"></i></button><button type="button" role="presentation" class="owl-next"><i class="icon-angle-right"></i></button></div><div class="owl-dots disabled"></div> #}
            </div>
            <div class="fancy-title title-center title-border topmargin">
                <h3>Nos offres recents</h3>
            </div>
